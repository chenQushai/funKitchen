{
  "pages": [
    //pages数组中第一项表示应用启动页,
    {
      "path": "pages/main/main",
      "style": {
        "enablePullDownRefresh": true,
        //开启下拉刷新
        "onReachBottomDistance":50
      }
    },
    {
      "path": "pages/me/index",
      "style": {
        "enablePullDownRefresh": true
        //开启下拉刷新
      }
    },
    {
      "path": "pages/classify/index",
      "style": {
        "enablePullDownRefresh": true
        //开启下拉刷新
      }
    },
    {
      "path": "pages/collection/index",
      "style": {
        "enablePullDownRefresh": true
        //开启下拉刷新
      }
    },
    {
      "path": "pages/foodDetail/index",
      "style": {
        "enablePullDownRefresh": true,
        "navigationBarTitleText": "菜谱详情",
        "navigationBarTextStyle":"black"
        //开启下拉刷新
      }
    },
    {
      "path": "pages/searchPage/index",
      "style": {
        "enablePullDownRefresh": true,
        "navigationBarTitleText": "菜谱搜索",
        "navigationBarTextStyle":"black"
      }
    }
  ],
  "tabBar": {
    "color": "#303030",
    "selectedColor": "#303030",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/main/main",
        "text": "首页",
        "iconPath": "static/icons/home.png",
        "selectedIconPath": "static/icons/home-active.png"
      },
      {
        "pagePath": "pages/classify/index",
        "text": "分类",
        "iconPath": "static/icons/classify.png",
        "selectedIconPath": "static/icons/classify-active.png"
      },
      {
        "pagePath": "pages/collection/index",
        "text": "收藏",
        "iconPath": "static/icons/collection.png",
        "selectedIconPath": "static/icons/collection-active.png"
      },
      {
        "pagePath": "pages/me/index",
        "text": "我的",
        "iconPath": "static/icons/me.png",
        "selectedIconPath": "static/icons/me-active.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#fbf9fe"
  }
}
